[% META title="Browse Crisprs"; META tab_name = 'Designs' %]
<div class="page-header">
  <h1>[%- gene_symbol -%] 
  <small>exon: <strong>[%exon_id%]</strong>
  chr: [%- chromosome -%]
  assembly: [%- genome -%]</small>
  </h1>
</div>

<div>
  <p style="font-size:25px">
    <b>Displaying: Gibson designs</b>
      [% IF view_single %]
        <a href="[% c.uri_for( '/user/genoverse_browse',
            { genome => genome,
              chromosome => chromosome,
              symbol => gene_symbol,
              gene_id => gene_id,
              exon_id => exon_id,
              view_single => 0,
              view_paired => view_paired }
              )
              %]" class="btn btn-info" align="right">
          Hide single crisprs</a>
      [% ELSE %]
        <a href="[% c.uri_for( '/user/genoverse_browse',
            { genome => genome,
              chromosome => chromosome,
              symbol => gene_symbol,
              gene_id => gene_id,
              exon_id => exon_id,
              view_single => 1,
              view_paired => view_paired }
              )
              %]" class="btn btn-info" align="right">
          Show single crisprs</a>
      [% END %]
      [% IF view_paired %]
        <a href="[% c.uri_for( '/user/genoverse_browse',
            { genome => genome,
              chromosome => chromosome,
              symbol => gene_symbol,
              gene_id => gene_id,
              exon_id => exon_id,
              view_single => view_single,
              view_paired => 0 }
              )
              %]" class="btn btn-info" align="right">
          Hide paired crisprs</a>
      [% ELSE %]
        <a href="[% c.uri_for( '/user/genoverse_browse',
            { genome => genome,
              chromosome => chromosome,
              symbol => gene_symbol,
              gene_id => gene_id,
              exon_id => exon_id,
              view_single => view_single,
              view_paired => 1 }
              )
              %]" class="btn btn-info" align="right">
          Show paired crisprs</a>
      [% END %]
  </p>
</div>


    <script type="text/javascript" src="[% c.uri_for('/static/genoverse/js/genoverse.wtsi.js')%]">
       {
        container : '#genoverse', // Where to inject Genoverse (css/jQuery selector)
        // If no genome supplied, it must have at least chromosomeSize, e.g.:
        // chromosomeSize : 249250621, // chromosome 1, human
        [% USE String(genome) %]
        genome    : '[% String.lower() %]', // see js/genomes/
        chr       : '[% chromosome %]',
        start     : [% exon_start %] - 2000,  // 2Kb context
        end       : [% exon_end %] + 2000,
        plugins   : [ 'controlPanel', 'karyotype', 'trackControls', 'resizer', 'fileDrop' ],
        tracks    : [
          Genoverse.Track.Scalebar,
          Genoverse.Track.extend({
            name      : 'Sequence',
            [% IF c.session.selected_species == 'Mouse' %]
            url       : 'http://rest.ensembl.org/sequence/region/mouse/__CHR__:__START__-__END__?content-type=text/plain',
            [% END %]            
            model     : Genoverse.Track.Model.Sequence.Ensembl,
            view      : Genoverse.Track.View.Sequence,
            resizable : 'auto',
            100000    : false
          }),
          Genoverse.Track.extend({
            name      : 'Designs',
            url       : "[% c.uri_for('/api/gibson_designs')%]" + "?chr=__CHR__&start=__START__&end=__END__" ,
            model     : Genoverse.Track.Model.Transcript.GFF3,
            view      : Genoverse.Track.View.Transcript,
            resizable : 'auto',
            height    : 150
          }),
[% IF view_single %]
          Genoverse.Track.extend({
            name      : 'Crisprs',
            url       : "[% c.uri_for('/api/crispr')%]" + "?chr=__CHR__&start=__START__&end=__END__" ,
            model     : Genoverse.Track.Model.Transcript.GFF3,
            view      : Genoverse.Track.View.Transcript,
            resizable : 'auto',
            height    : 150,

            populateMenu : function (f) {
              // get up to date feature object
              var feature = this.track.model.featuresById[f.id];

              var atts = {
                  Start  : feature.start,
                  End    : feature.end,
                  Strand : feature.strand,
                  Seq    : feature.seq,
                  Name   : feature.name,
                  PAM_right : feature.pam_right
              };
              return atts;
            },

          }),
[% END %]
[% IF view_paired %]
          Genoverse.Track.extend({
            name      : 'Crispr_pairs',
            url       : "[% c.uri_for('/api/crispr_pairs')%]" + "?chr=__CHR__&start=__START__&end=__END__" ,
            model     : Genoverse.Track.Model.Transcript.GFF3,
            view      : Genoverse.Track.View.Transcript,
            resizable : 'auto',
            height    : 150
          }),
[% END %]
          Genoverse.Track.extend({
            name   : 'Genes',
            [% IF c.session.selected_species == 'Mouse' %]
            url    : 'http://rest.ensembl.org/feature/region/mouse/__CHR__:__START__-__END__?feature=gene;content-type=application/json',
            [% END %]
            height : 200,
            info   : 'Ensembl API genes & transcripts, see <a href="http://beta.rest.ensembl.org/" target="_blank">beta.rest.ensembl.org</a> for more details',
            
            // Different settings for different zoom level
            2000000: { // This one applies when > 2M base-pairs per screen
              labels : false
            },
            100000: { // more than 100K but less then 2M
              labels : true,
              model  : Genoverse.Track.Model.Gene.Ensembl,
              view   : Genoverse.Track.View.Gene.Ensembl
            },
            1: { // > 1 base-pair, but less then 100K
              labels : true,
              model  : Genoverse.Track.Model.Transcript.Ensembl,
              view   : Genoverse.Track.View.Transcript.Ensembl
            }
          })
        ]
      }
    </script>

    <div id="genoverse"></div>
