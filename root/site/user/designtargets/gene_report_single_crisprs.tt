[% META title="Design Target Report"; META tab_name = "Designs" %]

<div class="page-header">
  <h1>Design Target Report
  <small>assembly: [% assembly %],</small>
  <small>build: [% build %]</small>
  </h1>
</div>

[% crispr_col_span = 7 %]
[% design_col_span = 1 %]

<form method"POST" id="crispr_pick" action="[% c.uri_for( '/user/design_target_report_crispr_pick' ) %]">
  <table id="design-target-report" class="table table-bordered table-condensed">
    <thead>
      <tr>
        <th class="design-target group-header" colspan="2">Design Target</th>
        <th class="design group-header" colspan="[% design_col_span %]">Vector Design</th>
        <th class="crispr group-header" colspan="[% crispr_col_span %]">Crispr Guide RNA</th>
      </tr>
      <tr>
        <th class="design-target">Gene</th>
        <th class="design-target">Target Exon</th>
        <th class="design">Design ID</th>
        <th class="crispr">ID</th>
        <th class="crispr">Sequence</th>
        <th class="crispr">Direction</th>
        <th class="crispr">Locus</th>
        <th class="crispr">Valid</th>
        <th class="crispr">Off Targets</th>
        <th class="crispr">Pick Crispr</th>
      </tr>
    </thead>

    <tbody>
      [%- FOR datum IN design_targets_data %]
        [% dt_first_row = 1 %]
        <tr>
          <td rowspan="[% datum.dt_rowspan %]" class="design-target">
            <p> [% datum.marker_symbol %] </p>
            <p> [% datum.gene_id %] </p>
            <p> <a href="[% datum.ensembl_gene_link %]" target="_blank" class="btn btn-mini">[% datum.ensembl_gene_id %]</a> </p>
          </td>
          <td rowspan="[% datum.dt_rowspan %]" class="design-target">
            <p> <strong>[% datum.ensembl_exon_id %]</strong> </p>
            <p> Chromosome: <span class="label"> [% datum.chromosome %] </span> </p>
            <p> Size: <span class="label"> [% datum.exon_size %] </span> </p>
            <p> Rank: <span class="label"> [% datum.exon_rank %] </span> </p>
          </td>
          <!-- No designs or crisprs for design target, show empty cells -->
          [% IF datum.designs.size == 0 && datum.crisprs.size == 0 %]
            <td class="design" colspan="[% design_col_span %]"></td>
            <td class="crispr" colspan="[% crispr_col_span %]"></td>
            </tr>
            [% NEXT %]
          [% END %]

          <!-- No designs for design target but we have crisprs, show all crisprs -->
          [% IF datum.designs.size == 0 %]
            <td class="design" rowspan="[% datum.design_rowspan %]" colspan="[% design_col_span %]"></td>
            [% FOR crispr IN datum.crisprs %]
              [% IF dt_first_row == 0 %]<tr>[% END %]
              <td class="crispr">
                <a href="[% c.uri_for( '/user/crispr' , crispr.crispr_id , 'view' ) %]" target="_blank">[% crispr.crispr_id %]</a>
                <a href="[% c.uri_for( '/user/crispr', crispr.crispr_id , 'blat' ) %]" target="_blank" class="btn btn-mini btn-block">blat</a>
              </td>
              <td class="crispr">[% crispr.seq %]</td>
              <td class="crispr">[% crispr.direction %]</td>
              <td class="crispr">[% crispr.locus %]</td>
              <td class="crispr">[% crispr.outlier %]</td>
              <td class="crispr">
                <table>
                  <tr>
                  <th>Mismatch</th>
                  [% FOREACH num IN [ 0 .. 5 ] %]<th>[% num %]</th>[% END %]
                 </tr>
                 <tr>
                  <td>Freq</td>
                  [% FOREACH num IN [ 0 .. 5 ] %]<td>[% crispr.summary.$num %]</td>[% END %]
                 </tr>
                </table>
              </td>
              <td class="crispr"></td>
              [% dt_first_row = 0 IF dt_first_row == 1 %]
              </tr>
            [% END %]
          [% ELSE %]
            <!-- We have both designs and crisprs, for each design show all crisprs -->
            [% FOR design IN datum.designs %]
              [% design_first_row = 1 %]
              [% IF dt_first_row == 0 %]<tr>[% END %]
              <td rowspan="[% datum.design_rowspan %]" class="design">
                <a href="[% c.uri_for( '/user/view_design', { design_id => design.design_id } ) %]" target="_blank">[% design.design_id %]</a>
                <a href="[% c.uri_for( '/user/design_ucsc_blat', { design_id => design.design_id } ) %]" target="_blank" class="btn btn-mini btn-block">blat</a>
              </td>
              [% IF datum.crisprs.size == 0 %]
                <td class="crispr" colspan="[% crispr_col_span %]"></td>
                </tr>
                [% dt_first_row = 0 IF dt_first_row == 1 %]
              [% ELSE %]
                [% FOR crispr IN datum.crisprs %]
                  [% UNLESS design_first_row %]<tr>[% END %]
                  <td class="crispr">
                    <a href="[% c.uri_for( '/user/crispr' , crispr.crispr_id , 'view' ) %]" target="_blank">[% crispr.crispr_id %]</a>
                    <a href="[% c.uri_for( '/user/crispr', crispr.crispr_id , 'blat' ) %]" target="_blank" class="btn btn-mini btn-block">blat</a>
                  </td>
                  <td class="crispr">[% crispr.seq %]</td>
                  <td class="crispr">[% crispr.direction %]</td>
                  <td class="crispr">[% crispr.locus %]</td>
                  <td class="crispr">[% crispr.outlier %]</td>
                  <td class="crispr">
                    <table>
                      <tr>
                      <th>Mismatch</th>
                      [% FOREACH num IN [ 0 .. 5 ] %]<th>[% num %]</th>[% END %]
                     </tr>
                     <tr>
                      <td>Freq</td>
                      [% FOREACH num IN [ 0 .. 5 ] %]<td>[% crispr.summary.$num %]</td>[% END %]
                     </tr>
                    </table>
                  </td>
                  <td class="crispr">
                    [% IF crispr.crispr_id %]
                      [% linked = 0 %]
                      [% FOR crispr_id IN design.linked_crispr_ids %]
                        <!-- we have a crispr already linked to a design -->
                        [% IF crispr.crispr_id == crispr_id %]
                          [% linked = 1 %]
                          <input type="checkbox" name="crispr_pick" value="[% crispr.crispr_id %]:[% design.design_id %]" checked />
                          <input type="hidden"  name="design_crispr_link" value="[% crispr.crispr_id %]:[% design.design_id %]" />
                        [% END %]
                      [% END %]

                      [% IF linked == 0 %]
                        <input type="checkbox" name="crispr_pick" value="[% crispr.crispr_id %]:[% design.design_id %]" />
                      [% END %]
                    [% END %]
                  </td>
                  </tr>
                  [% design_first_row = 0 IF design_first_row == 1 %]
                  [% dt_first_row = 0 IF dt_first_row == 1 %]
                [% END %]
              [% END %]
            [% END %]
          [% END %]
      [%- END %]
    </tbody>
  </table>

<div class="row">
  <div class="span3">
    <a href="[% c.uri_for( '/user/design_target_gene_search' ) %]" class="btn">
    <i class="icon-hand-left"></i> Back to search </a>
  </div>
  <div class="span3 offset6" align="right">
    <input type="hidden"  name="crispr_types" value="[% params.crispr_types %]" />
    <input type="submit" name="action" class="btn btn-primary" value="Make Crispr Picks" />
  </div>
</div>

</form>

<div class="row">

  <div class="span7 offset2 well">
    <h5 align="center"><strong>Search Terms</strong></h5>
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>[% IF species == 'Human' %]HGNC IDs[% ELSE %]MGI IDs[% END %]</th>
          <th>Ensembl Gene IDs</th>
          <th>Marker Symbols</th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td>[% search_terms.gene_ids.join(', ') %]</td>
          <td>[% search_terms.ensembl_gene_ids.join(', ') %]</td>
          <td>[% search_terms.marker_symbols.join(', ') %]</td>
        </tr>
      </tbody>
    </table>
  </div>

</div>
