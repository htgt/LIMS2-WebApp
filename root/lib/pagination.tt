[% IF pageset.last_page > 1 %]
<div class="pagination">
  <ul>
    <li><a href="[% pageset.uri( pageset.first_page ) %]"><i class="icon-fast-backward"></i></a></li>
    [% IF pageset.previous_page %]
    <li><a href="[% pageset.uri( pageset.previous_page ) %]"><i class="icon-backward"></i></a></li>
    [% ELSE %]
    <li class="disabled"><a href="#"><i class="icon-backward"></i></a></li>
    [% END %]
    [% FOR page IN pageset.pages_in_set %]
    <li [%- IF page == pageset.current_page %]class="active"[% END %]>
      <a href="[% pageset.uri(page) %]">[% page %]</a>
    </li>
    [% END %]
    [% IF pageset.next_page %]
    <li><a href="[% pageset.uri( pageset.next_page ) %]"><i class="icon-forward"></i></a></li>
    [% ELSE %]
    <li class="disabled"><a href="#"><i class="icon-forward"></i></a></li>
    [% END %]
    <li><a href="[% pageset.uri( pageset.last_page ) %]"><i class="icon-fast-forward"></i></a></li>
  </ul>
</div>
[% END %]
