ALTER TABLE audit.wells DROP COLUMN name;
ALTER TABLE audit.wells DROP COLUMN plate_id;
CREATE TABLE audit.well_locations (
audit_op CHAR(1) NOT NULL CHECK (audit_op IN ('D','I','U')),
audit_user TEXT NOT NULL,
audit_stamp TIMESTAMP NOT NULL,
audit_txid INTEGER NOT NULL,
plate_id integer,
well_name text,
well_id integer
);
CREATE OR REPLACE FUNCTION public.process_well_locations_audit()
RETURNS TRIGGER AS $well_locations_audit$
    BEGIN
        IF (TG_OP = 'DELETE') THEN
           INSERT INTO audit.well_locations SELECT 'D', user, now(), txid_current(), OLD.*;
        ELSIF (TG_OP = 'UPDATE') THEN
           INSERT INTO audit.well_locations SELECT 'U', user, now(), txid_current(), NEW.*;
        ELSIF (TG_OP = 'INSERT') THEN
           INSERT INTO audit.well_locations SELECT 'I', user, now(), txid_current(), NEW.*;
        END IF;
        RETURN NULL;
    END;
$well_locations_audit$ LANGUAGE plpgsql;
CREATE TRIGGER well_locations_audit
AFTER INSERT OR UPDATE OR DELETE ON public.well_locations
    FOR EACH ROW EXECUTE PROCEDURE public.process_well_locations_audit();
