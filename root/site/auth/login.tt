[% META title = "Login" %]
<div class="login_form">
  <form method="POST" action="[% c.uri_for( '/login' ) %]" name="login_form" class="well form-inline">
    <fieldset>
      <legend>Login</legend>
      <input name="goto_on_success" type="hidden" value="[% c.req.param('goto_on_success') %]" />
      <input name="username" id="username_field" type="text" placeholder="Username" value="[% c.req.param('username') %]"/>
      <input name="password" id="password_field" type="password" placeholder="Password" />
      <input class="btn btn-primary" name="login" id="login_button" type="submit" value="Login" />
    </fieldset>
  </form>
</div>
