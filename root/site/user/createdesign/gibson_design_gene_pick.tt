[% META title = "Gibson Design Gene Pick"; META tab_name = "Designs" %]

<form method="POST" action="[% c.uri_for( '/user/gibson_design_exon_pick' ) %]" class="well">
  <fieldset>
    <legend>Gibson Design Gene Pick</legend>

    <input type="text" class="input-xxlarge" name="gene" placeholder="gene name">
    <span class="help-block">Valid search terms: HGNC IDs, MGI IDs, Ensembl Gene IDs and Marker Symbols.</span>

    <label><strong>Show Exons</strong></label>
    <label class="radio">
      <input type="radio" name="report_type" value="standard" checked>
      Canonical Transcript Only
    </label>
    <label class="radio">
      <input type="radio" name="report_type" value="simple">
      All
    </label>

    <br>
    <input type="submit" name="action" class="btn btn-primary" value="Find Exons" />
  </fieldset>
</form>
