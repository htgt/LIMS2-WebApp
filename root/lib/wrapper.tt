<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>[% template.title || "HTGT LIMS2" %]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Le styles -->
    <link href="[% c.uri_for( '/static/bootstrap/css/bootstrap.min.css' ) %]" rel="stylesheet">
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      div#main {
        padding-top: 20px;
      }
    </style>
    <!-- jQuery UI stylesheets -->
    <link rel="stylesheet" type="text/css" href="[% c.uri_for( '/static/jquery/css/ui-lightness/jquery-ui-1.8.21.custom.css' ) %]">

    <!-- Custom Styles -->
    <link rel="stylesheet" type="text/css" href="[% c.uri_for( '/static/css/lims2.css' ) %]">

    <!-- extJs standard css -->
    <link rel="stylesheet" type="text/css" href="[% c.uri_for('/static/extjs/resources/css/ext-all.css') %]" />

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <link rel="shortcut icon" href="[% c.uri_for( '/favicon.ico' ) %]">

    <!-- Le javascript
    ================================================== -->
    <script src="[% c.uri_for( '/static/js/jquery-1.7.2.min.js' ) %]"></script>
    <script src="[% c.uri_for( '/static/bootstrap/js/bootstrap.min.js' ) %]"></script>
    <script src="[% c.uri_for( '/static/js/poller.js' ) %]"></script>
    <script src="[% c.uri_for( '/static/jquery/js/jquery-ui-1.8.21.custom.min.js' ) %]"></script>
    
    <script src="[% c.uri_for('/static/extjs/ext-all.js') %]"></script>
    
  </head>

  <body>

    [% INCLUDE 'navigation.tt' %]

    <div id="main" class="container">
      [% SET error = error_msg || c.flash.error_msg; IF error.length > 0 %]
      <div class="alert alert-error">
        <button class="close" data-dismiss="alert" href="#">&times;</button>
        <p>[% error %]</p>
      </div>
      [% END %]
      [% SET info = info_msg || c.flash.info_msg; IF info.length > 0 %]
      <div class="alert alert-info">
        <button class="close" data-dismiss="alert" href="#">&times;</button>
        <p>[% info %]</p>
      </div>
      [% END %]
      [% SET success = success_msg || c.flash.success_msg; IF success.length > 0 %]
      <div class="alert alert-success">
        <button class="close" data-dismiss="alert" href="#">&times;</button>
        <p>[% success | none %]</p>
      </div>
      [% END %]
      [% content | none %]
    </div> <!-- /container -->

    <div class="navbar navbar-fixed-bottom">
      <div class="navbar-inner">
        <div class="container">
          <p class="nav pull-right navbar-text">
          version: <strong>[% c.model('Golgi').software_version %]</strong> |
          database: <strong>[% c.model('Golgi').database_name %]</strong>
          </p>
        </div>
      </div>
    </div>

  </body>
</html>
